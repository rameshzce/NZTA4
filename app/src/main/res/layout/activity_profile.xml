<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eaeaea"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tokkalo.nzta.ProfileActivity">

    <!-- <ImageView
        android:id="@+id/profileImage"
        android:src="@drawable/icon_user"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_marginTop="2sp"
        android:layout_height="150dp"
        android:background="@drawable/bg_image_rounded"
        android:scaleType="fitXY" /> -->

    <ImageView
        android:id="@+id/profileImage"
        android:src="@drawable/edit"
        android:layout_gravity="right"
        android:layout_width="20dp"
        android:layout_marginTop="2sp"
        android:layout_marginRight="20dp"
        android:layout_height="20dp" />

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/fb_image"
        android:layout_marginTop="40sp"
        app:siBorderWidth="10dp"
        app:siBorderColor="#c4c4c4"
        android:background="@drawable/frame" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:text="Ramesh Kolamala"
        android:textColor="#085a8e"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="4sp"
        android:maxLines="3"
        android:singleLine="false"
        android:textColor="#085a8e"
        android:textSize="20sp"
        android:text="Mob: 0221406655" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="4sp"
        android:maxLines="3"
        android:singleLine="false"
        android:textColor="#085a8e"
        android:textSize="20sp"
        android:text="rameshkolamala@gmail.com" />

    <Button
        android:id="@+id/button"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:background="@drawable/bg_button_rounded2"
        android:text="My gallery"
        android:onClick="myGallery"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp" />
</LinearLayout>
