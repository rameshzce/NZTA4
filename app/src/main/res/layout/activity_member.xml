<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="#ffffff"
    android:stretchColumns="1">


    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="200dp"
        android:layout_marginBottom="1dip"
        android:onClick="rowClick1"
        android:gravity="center_vertical"
        android:background="@color/upcomingEvents">


        <TableLayout>
            <TableRow
                android:gravity="right"
                android:layout_width="fill_parent">

                <TextView
                    android:id="@+id/textView1a"
                    android:text="Upcoming Events"
                    android:layout_span="2"
                    android:layout_gravity="right"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:paddingRight="60dp"
                    android:textStyle="bold"></TextView>
            </TableRow>
            <TableRow
                android:gravity="right"

                android:layout_width="fill_parent">

                <ImageView
                    android:id="@+id/imageView1"
                    android:paddingLeft="60dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/upcoming_events"></ImageView>

                <TextView
                    android:id="@+id/textView1"
                    android:text="2016"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:paddingRight="60dp"
                    android:textStyle="bold"></TextView>
            </TableRow>


        </TableLayout>


    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_marginBottom="1dip"
        android:background="@color/existingEvents"
        android:gravity="center_vertical"
        android:onClick="rowClick2">


        <TableLayout>
            <TableRow
                android:gravity="right"
                android:layout_width="fill_parent">

                <TextView
                    android:id="@+id/textView2a"
                    android:text="Existing Events"
                    android:layout_span="2"
                    android:layout_gravity="right"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:paddingRight="60dp"
                    android:textStyle="bold"></TextView>
            </TableRow>
            <TableRow
                android:gravity="right"
                android:layout_width="fill_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:paddingLeft="60dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/existing_events"></ImageView>

                <TextView
                    android:id="@+id/textView2"
                    android:text="2015"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:paddingRight="60dp"
                    android:textStyle="bold"></TextView>
            </TableRow>


        </TableLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_marginBottom="1dip"
        android:background="@color/goGreen"
        android:gravity="center_vertical"
        android:onClick="rowClick3">


        <TableLayout>
            <TableRow
                android:gravity="right"
                android:layout_width="fill_parent">

                <TextView
                    android:id="@+id/textView3a"
                    android:text="Go green/NZ Blood"
                    android:layout_span="2"
                    android:layout_gravity="right"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:paddingRight="60dp"
                    android:textStyle="bold"></TextView>
            </TableRow>

            <TableRow
                android:gravity="right"
                android:layout_width="fill_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:paddingLeft="60dp"
                    android:src="@drawable/go_green"></ImageView>

                <TextView
                    android:id="@+id/textView3"
                    android:text="Others"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:paddingRight="60dp"
                    android:textStyle="bold"></TextView>
            </TableRow>


        </TableLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_marginBottom="1dip"
        android:background="@color/referFriend"
        android:gravity="center_vertical"
        android:onClick="rowClick4">


        <TableLayout>

            <TableRow
                android:gravity="right"
                android:layout_width="fill_parent">

                <TextView
                    android:id="@+id/textView4a"
                    android:text="Invite a Friend"
                    android:layout_span="2"
                    android:layout_gravity="right"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:paddingRight="60dp"
                    android:textStyle="bold"></TextView>
            </TableRow>
            <TableRow
                android:gravity="right"
                android:layout_width="fill_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:paddingLeft="60dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/invite_friend"></ImageView>

                <TextView
                    android:id="@+id/textView4"
                    android:text="Family"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:paddingRight="60dp"
                    android:textStyle="bold"></TextView>
            </TableRow>


        </TableLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:background="@color/helpTimes"
        android:gravity="center_vertical"
        android:onClick="rowClick5">


        <TableLayout>

            <TableRow
                android:gravity="right"
                android:layout_width="fill_parent">

                <TextView
                    android:id="@+id/textView5a"
                    android:text="Helping"
                    android:layout_span="2"
                    android:layout_gravity="right"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:paddingRight="60dp"
                    android:textStyle="bold"></TextView>
            </TableRow>
            <TableRow
                android:gravity="right"
                android:layout_width="fill_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:paddingLeft="60dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/hands"></ImageView>

                <TextView
                    android:id="@+id/textView5"
                    android:text="Hands!"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:paddingRight="60dp"
                    android:textStyle="bold"></TextView>
            </TableRow>


        </TableLayout>

    </TableRow>

</TableLayout>

</ScrollView>